<%- include('partials/header') %>

<% if (hero) { %>
<header class="hero" style="background-image: url('<%= hero.shortPlayCover %>')">
    <div class="hero-content">
        <h1><%= hero.shortPlayName %></h1>
        <div class="hero-meta">
            <span class="badge">4K</span>
            <span><%= hero.heatScoreShow %> Views</span>
            <span>2025</span>
        </div>
        <div class="hero-buttons">
            <a href="/watch/<%= hero.shortPlayId %>" class="btn btn-primary"><i class="fas fa-play"></i> Watch Now</a>
            <button class="btn btn-secondary"><i class="fas fa-plus"></i> List</button>
        </div>
    </div>
</header>
<% } %>

<div class="main-content">
    <% if (theaters && theaters.length > 0) { %>
        <% theaters.forEach(group => { %>
            <% if (group.contentInfos && group.contentInfos.length > 0) { %>
                <h2 class="section-title"><%= group.contentName %></h2>
                <div class="grid-layout">
                    <% group.contentInfos.forEach(item => { %>
                        <div class="card" onclick="window.location.href='/watch/<%= item.shortPlayId %>'">
                            <div class="card-image-wrapper">
                                <img src="<%= item.shortPlayCover %>" alt="<%= item.shortPlayName %>" loading="lazy">
                            </div>
                            <div style="padding: 8px 0;">
                                <h4 style="font-size: 0.9rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= item.shortPlayName %></h4>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        <% }) %>
    <% } %>
</div>

<%- include('partials/footer') %>
